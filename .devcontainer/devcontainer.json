{
   "name": "MagicEye",
   "build": { "dockerfile": "Dockerfile" },
   "features": 
   {
      "ghcr.io/guiyomh/features/vim:0": { "version": "latest" },
      "ghcr.io/devcontainers/features/git:1": { "version": "latest" },
      "ghcr.io/devcontainers/features/git-lfs:1": { "version": "latest" }
   },
   "customizations": {
      "vscode": {
         "extensions": ["ms-vscode.cpptools-extension-pack",
                        "cschlosser.doxdocgen",
                        "xaver.clang-format"],
         "settings": {
            "editor.formatOnSave": true,
            "editor.defaultFormatter": "xaver.clang-format"
         }
      },
      "codespaces": {
         "extensions": ["ms-vscode.cpptools-extension-pack",
                        "cschlosser.doxdocgen",
                        "xaver.clang-format"],
         "settings": {
            "editor.formatOnSave": true,
            "editor.defaultFormatter": "xaver.clang-format"
         }
      }
   },
   "remoteUser": "vscode"
}
